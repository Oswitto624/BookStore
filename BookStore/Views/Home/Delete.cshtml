@model BookStore.Domain.Entities.Book
@{
    ViewData["Title"] = "Удаление книги";
}

<div class="container">
    <h2>Удаление книги</h2>

        <div>
        <dl class="row">
                <dt class = "col-sm-2">
                    Id
                </dt>
                <dd class = "col-sm-10">
                    @Model.Id
                </dd>
                <dt class = "col-sm-2">
                    Название книги
                </dt>
                <dd class = "col-sm-10">
                    @Model.Name
                </dd>
                <dt class = "col-sm-2">
                    Автор
                </dt>
                <dd class = "col-sm-10">
                    @Model.Author.Name
                </dd>
                <dt class = "col-sm-2">
                    Дата публикации
                </dt>
                <dd class = "col-sm-10">
                    @Model.PublicationDate
                </dd>
            </dl>
    
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                <a asp-action="Index">Назад к списку</a>
            </form>
        </div>
</div>